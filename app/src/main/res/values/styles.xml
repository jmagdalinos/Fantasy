<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Title text -->
    <style name="titleText">
        <item name="android:background">@color/mainColor</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/textSize_Title_Text</item>
        <item name="android:padding">@dimen/padding_Title_Text</item>
        <item name="android:elevation">@dimen/elevation_Title_Text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Style for dice image -->
    <style name="diceImage_Landscape">
        <item name="android:paddingTop">@dimen/padding_image</item>
        <item name="android:paddingBottom">@dimen/padding_image</item>
        <item name="android:elevation">@dimen/elevation_Title_Text</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Style for main text in portrait mode -->
    <style name="mainText">
        <item name="android:layout_marginTop">@dimen/marginTopBottom_Main_Text</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <!-- Style for main text in landscape mode -->
    <style name="mainTextLandscape">
        <item name="android:layout_marginTop">@dimen/marginTopBottom_Main_Text</item>
        <item name="android:layout_marginBottom">@dimen/marginTopBottom_Main_Text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Style for line -->
    <style name="vertical">
        <item name="android:background">@color/mainColor</item>
        <item name="android:layout_margin">@dimen/margin_Divider</item>
    </style>

    <!-- Style for text in the bottom banner -->
    <style name="copyrightText">
        <item name="android:background">@color/mainColor</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/textSize_Copyright_Text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
